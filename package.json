{
  "name": "sqm",
  "version": "0.3.2",
  "description": "A lightweight and flexible query maker library for building raw SQL queries in JavaScript.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "build:prod": "tsup src/index.ts --format cjs,esm --dts --out-dir dist --clean --treeshake smallest --minify-identifiers --minify-syntax",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "query",
    "maker",
    "library",
    "sql",
    "select",
    "insert",
    "update",
    "delete",
    "postgres"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/NickRMD/queryMaker.git"
  },
  "author": "Nicolas R. M. Dias <nicolasrenanmachado@gmail.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "terser": "^5.44.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
